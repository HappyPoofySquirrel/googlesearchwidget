<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            tools:text="Thunderhead - Understand Intent-Driven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/tv_link_search_result_item" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            tools:text="https://www.thunderhead.com/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_light"
            android:id="@+id/tv_url_search_result_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_link_search_result_item" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_search_result_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_url_search_result_item" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            tools:text="THUNDERHEAD NAMED A LEADER IN CUSTOMER JOURNEY ANALYTICS MARKET. Thunderhead's ONE Engagement Hub platform scores among highest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description_search_result_item"
            app:layout_constraintStart_toEndOf="@+id/iv_search_result_item"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_search_result_item" android:ellipsize="end"
            android:maxLines="5"/>
</androidx.constraintlayout.widget.ConstraintLayout>